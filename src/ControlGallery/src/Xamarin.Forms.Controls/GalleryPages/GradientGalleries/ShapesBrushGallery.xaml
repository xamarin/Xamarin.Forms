<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Xamarin.Forms.Controls.GalleryPages.GradientGalleries.ShapesBrushGallery"
    Title="Shapes using Brush Gallery">
    <ContentPage.Resources>
        <ResourceDictionary>

            <!-- FILL LINEARGRADIENTBRUSH -->
            <LinearGradientBrush
                x:Key="FillLinearBrush"
                StartPoint="0, 0" EndPoint="1, 1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="DarkBlue" Offset="0.1" />
                    <GradientStop Color="Pink" Offset="0.6" />
                    <GradientStop Color="LightPink" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <!-- FILL RADIALGRADIENTBRUSH -->
            <RadialGradientBrush
                x:Key="FillRadialBrush"
                Center="0.5, 0.5" Radius="0.75">
                <RadialGradientBrush.GradientStops>
                    <GradientStop Color="DarkBlue" Offset="0.1" />
                    <GradientStop Color="Pink" Offset="0.6" />
                    <GradientStop Color="LightPink" Offset="1.0" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>

            <!-- STROKE BRUSH -->
            <LinearGradientBrush
                x:Key="StrokeBrush"
                StartPoint="0, 0" EndPoint="1, 1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="Orange" Offset="0.1" />
                    <GradientStop Color="DarkOrange" Offset="0.6" />
                    <GradientStop Color="Red" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="12">
                <Label
                    Text="Ellipse (LinearGradientBrush)"/>
                <Ellipse
                    HorizontalOptions="Start"
                    HeightRequest="50"
                    WidthRequest="150"
                    StrokeThickness="10"
                    Stroke="{StaticResource StrokeBrush}"
                    Fill="{StaticResource FillLinearBrush}"/>
                <Label
                    Text="Ellipse (RadialGradientBrush)"/>
                <Ellipse
                    HorizontalOptions="Start"
                    HeightRequest="50"
                    WidthRequest="150"
                    StrokeThickness="10"
                    Stroke="{StaticResource StrokeBrush}"
                    Fill="{StaticResource FillRadialBrush}"/>
                <Label
                    Text="Rectangle"/>
                <Rectangle
                    HorizontalOptions="Start"
                    HeightRequest="50"
                    WidthRequest="150"
                    RadiusX="12"
                    RadiusY="12"
                    StrokeThickness="10"
                    Stroke="{StaticResource StrokeBrush}"
                    Fill="{StaticResource FillLinearBrush}"/>
                <Label
                    Text="Line"/>
                <Line
                    HeightRequest="120"
                    WidthRequest="120"
                    StrokeThickness="4"
                    Stroke="{StaticResource StrokeBrush}"
                    X1="40" Y1="0"
                    X2="0" Y2="120" />
                <Label
                    Text="Polyline"/>
                 <Polyline
                     HeightRequest="100"
                     WidthRequest="500"
                     StrokeThickness="4"
                     Stroke="{StaticResource StrokeBrush}"
                     Points="0,0 10,30 15,0 18,60 23,30 35,30 40,0 43,60 48,30 100,30" />
                <Label
                    Text="Polygon"/>
                <Polygon
                    HeightRequest="100"
                    WidthRequest="200"
                    StrokeThickness="10"
                    Stroke="{StaticResource StrokeBrush}"
                    Fill="{StaticResource FillLinearBrush}"
                    Points ="40,10 70,80 10,50" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>