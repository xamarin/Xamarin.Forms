<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Compatibility.Sample.Views.FontsPage"
             Title="Fonts">

    <StackLayout>
        <Label Text="Normal and default font" />
        <Label Text="Custom font using filename" FontFamily="Dokdo-Regular.ttf" />
        <Label Text="The same font using an alias" FontFamily="Cool Writing Font" />

        <Label Text="Large and default font" FontSize="24" />
        <Label Text="Custom large font using filename" FontFamily="Dokdo-Regular.ttf" FontSize="24" />
        <Label Text="The same large font using an alias" FontFamily="Cool Writing Font" FontSize="24" />

        <Label Text="Bold and default font" FontAttributes="Bold" />
        <Label Text="Custom bold font using filename" FontFamily="Dokdo-Regular.ttf" FontAttributes="Bold" />
        <Label Text="The same bold font using an alias" FontFamily="Cool Writing Font" FontAttributes="Bold" />
    </StackLayout>

</ContentPage>
