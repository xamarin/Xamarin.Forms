<?xml version="1.0" encoding="utf-8" ?>
<controls:TestContentPage
			 xmlns:controls="clr-namespace:Xamarin.Forms.Controls"
	         xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin.Forms.Controls.Issues.Issue10166">
    <ScrollView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Text="All layouts should behave properly to their set property values and show no weird visual bugs" />
            <Label Grid.Column="0" Grid.Row="1" Text="Frame, NoClipping, NoCornerRadius"/>
            <Label Grid.Column="0" Grid.Row="2" Text="Frame, Clipping, NoCornerRadius"/>
            <Label Grid.Column="0" Grid.Row="3" Text="Frame, Clipping, CornerRadius"/>
            <Label Grid.Column="0" Grid.Row="4" Text="Frame, NoClipping, CornerRadius"/>
            <Label Grid.Column="0" Grid.Row="5" Text="Frame, NoClipping, CornerRadius, Shadow"/>
            <Label Grid.Column="0" Grid.Row="6" Text="Frame, Clipping, CornerRadius, Shadow"/>

            <Label Grid.Column="0" Grid.Row="7" Text="ContentView, NoClipping"/>
            <Label Grid.Column="0" Grid.Row="8" Text="ContentView, Clipping"/>

            <Frame Grid.Column="1" Grid.Row="1" IsClippedToBounds="False" HeightRequest="20" BackgroundColor="Red"
                       HasShadow="False" Padding="0"
                       CornerRadius="0" HorizontalOptions="Start" WidthRequest="100">
                <Label Text="Wwwwwwwwwwwwwwwwwwww" TranslationY="10" TranslationX="50" LineBreakMode="WordWrap"
                           MaxLines="1" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="2" IsClippedToBounds="True" HeightRequest="20" BackgroundColor="Yellow"
                       HasShadow="False" Padding="0"
                       CornerRadius="0" HorizontalOptions="Start" WidthRequest="100">
                <Label Text="Wwwwwwwwwwwwwwwwwwww" TranslationY="10" TranslationX="50" LineBreakMode="WordWrap"
                           MaxLines="1" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="3" IsClippedToBounds="True" HeightRequest="20" BackgroundColor="Aqua"
                       HasShadow="False" Padding="0"
                       CornerRadius="25" HorizontalOptions="Start" WidthRequest="100">
                <Label Text="Wwwwwwwwwwwwwwwwwwww" TranslationY="10" TranslationX="50" LineBreakMode="WordWrap"
                           MaxLines="1" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="4" IsClippedToBounds="False" HeightRequest="20" BackgroundColor="Aqua"
                       HasShadow="False" Padding="0"
                       CornerRadius="25" HorizontalOptions="Start" WidthRequest="100">
                <Label Text="Wwwwwwwwwwwwwwwwwwww" TranslationY="10" TranslationX="50" LineBreakMode="WordWrap"
                           MaxLines="1" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="5" IsClippedToBounds="False" HeightRequest="20" BackgroundColor="Aqua"
                       HasShadow="True" Padding="0"
                       CornerRadius="25" HorizontalOptions="Start" WidthRequest="100">
                <Label Text="Wwwwwwwwwwwwwwwwwwww" TranslationY="10" TranslationX="50" LineBreakMode="WordWrap"
                           MaxLines="1" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="6" IsClippedToBounds="True" HeightRequest="20" BackgroundColor="Aqua"
                       HasShadow="True" Padding="0"
                       CornerRadius="25" HorizontalOptions="Start" WidthRequest="100">
                <Label Text="Wwwwwwwwwwwwwwwwwwww" TranslationY="10" TranslationX="50" LineBreakMode="WordWrap"
                           MaxLines="1" />
            </Frame>
            <ContentView Grid.Column="1" Grid.Row="7" IsClippedToBounds="False" HeightRequest="20"
                             BackgroundColor="Red" HorizontalOptions="Start"
                             WidthRequest="100">
                <Label Text="Wwwwwwwwwwwwwwwwwwww" TranslationY="10" TranslationX="50" LineBreakMode="WordWrap"
                           MaxLines="1" />
            </ContentView>
            <ContentView Grid.Column="1" Grid.Row="8" IsClippedToBounds="True" HeightRequest="20"
                             BackgroundColor="Yellow" HorizontalOptions="Start"
                             WidthRequest="100">
                <Label Text="Wwwwwwwwwwwwwwwwwwww" TranslationY="10" TranslationX="50" LineBreakMode="WordWrap"
                           MaxLines="1" />
            </ContentView>
        </Grid>
    </ScrollView>
</controls:TestContentPage>