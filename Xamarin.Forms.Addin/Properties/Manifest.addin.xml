<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>

	<Runtime>
		<Import file="Templates/Forms-ApplicationProject-PCL.xpt.xml" />
		<Import file="Templates/Forms-ApplicationProject-SAP.xpt.xml" />
		<Import file="Templates/Forms-LibraryProject.xpt.xml" />
		<Import file="Templates/Forms-ContentPage-Xaml.xft.xml" />
		<Import file="Templates/Forms-ContentView-Xaml.xft.xml" />
	</Runtime>		

	<Extension path = "/MonoDevelop/Ide/ProjectTemplatePackageRepositories">
    	<PackageRepository path="Packages" />
	</Extension>

	<Extension path="/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate id="Forms-ApplicationProject-PCL" file="Templates/Forms-ApplicationProject-PCL.xpt.xml" />
		<ProjectTemplate id="Forms-ApplicationProject-SAP" file="Templates/Forms-ApplicationProject-SAP.xpt.xml" />
		<ProjectTemplate id="Forms-LibraryProject" file="Templates/Forms-LibraryProject.xpt.xml" />
	</Extension>

    <Extension path="/MonoDevelop/Ide/FileTemplates">
	    <FileTemplate id="Forms-ContentPage-Xaml" file="Templates/Forms-ContentPage-Xaml.xft.xml" />
	    <FileTemplate id="Forms-ContentView-Xaml" file="Templates/Forms-ContentView-Xaml.xft.xml" />
    </Extension>
		    
    <Extension path = "/MonoDevelop/Core/MimeTypes">
    	<MimeType id="application/xaml+xml" _description="XAML document" icon="md-xml-file-icon"  isText="true">
		    <File pattern="*.xaml" />
        </MimeType>
    </Extension>

    <Extension path = "/MonoDevelop/TypeSystem/Parser">
        <Parser class = "XamarinStudio.Forms.FormsXamlParser" insertbefore="XmlParser" mimeType="application/xaml+xml"/>
    </Extension>
   <Extension path = "/MonoDevelop/Ide/TextEditorExtensions">
        <Class fileExtensions = ".xaml" class="XamarinStudio.Forms.FormsEditorExtension" insertbefore="MonoDevelop.XmlEditor.XmlTextEditorExtension"/>
    </Extension>
    <Extension path = "/MonoDevelop/Ide/FileFilters">
        <FileFilter id = "XamlFiles"
		            insertbefore = "AllFiles"
                   _label = "XAML Files"
                   extensions = "*.xaml" />
    </Extension>
</ExtensionModel>
