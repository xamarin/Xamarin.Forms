<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Xamarin.Forms.Controls.GalleryPages.GradientGalleries.LinearGradientPointsGallery"
             Title="LinearGradient Points Gallery">
    <ContentPage.Resources>
        <ResourceDictionary>

            <Style TargetType="Grid">
                <Setter Property="HeightRequest" Value="150" />
                <Setter Property="WidthRequest" Value="150" />
                <Setter Property="Margin" Value="12, 12, 0, 0" />
            </Style>

            <Style TargetType="Frame">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="HeightRequest" Value="100" />
                <Setter Property="WidthRequest" Value="100" />
                <Setter Property="Margin" Value="12, 12, 0, 0" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontSize" Value="9" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <LinearGradientBrush 
                x:Key="LinearGradient01"
                StartPoint="0, 0" EndPoint="1, 1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush 
                x:Key="LinearGradient02"
                StartPoint="0.5, 0" EndPoint="0.5, 1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush  
                x:Key="LinearGradient03"      
                StartPoint="1, 0" EndPoint="0, 1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush 
                x:Key="LinearGradient04"
                StartPoint="1, 0.5" EndPoint="0, 0.5">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush 
                x:Key="LinearGradient05"
                StartPoint="1, 1" EndPoint="0, 0">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush
                x:Key="LinearGradient06"
                StartPoint="0.5, 1" EndPoint="0.5, 0">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush
                x:Key="LinearGradient07"
                StartPoint="0, 1" EndPoint="1, 0">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush 
                x:Key="LinearGradient08"
                StartPoint="0, 0.5" EndPoint="1, 0.5">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label
                    Text="Using a Grid"/>
                <FlexLayout 
                    JustifyContent="Start"
                    AlignItems="Start"
                    AlignContent="Start"
                    Wrap="Wrap">
                    <StackLayout>
                        <Grid Background="{StaticResource LinearGradient01}" />
                        <Label Text="(0, 0) - (1, 1)" />
                    </StackLayout>
                    <StackLayout>
                        <Grid Background="{StaticResource LinearGradient02}" />
                        <Label Text="(0.5, 0) - (0.5, 1)" />
                    </StackLayout>
                    <StackLayout>
                        <Grid Background="{StaticResource LinearGradient03}" />
                        <Label Text="(1, 0) - (0, 1)" />
                    </StackLayout>
                    <StackLayout>
                        <Grid Background="{StaticResource LinearGradient04}" />
                        <Label Text="(1, 0.5) - (0, 0.5)" />
                    </StackLayout>
                    <StackLayout>
                        <Grid Background="{StaticResource LinearGradient05}" />
                        <Label Text="(0.5, 1) - (0.5, 0)" />
                    </StackLayout>
                    <StackLayout>
                        <Grid Background="{StaticResource LinearGradient06}" />
                        <Label Text="(0, 0) - (1, 1)" />
                    </StackLayout>
                    <StackLayout>
                        <Grid Background="{StaticResource LinearGradient07}" />
                        <Label Text="(0, 1) - (1, 0)" />
                    </StackLayout>
                    <StackLayout>
                        <Grid Background="{StaticResource LinearGradient08}" />
                        <Label Text="(0, 0.5) - (1, 0.5)" />
                    </StackLayout>
                </FlexLayout>
                <FlexLayout 
                    JustifyContent="Start"
                    AlignItems="Start"
                    AlignContent="Start"
                    Wrap="Wrap">
                    <StackLayout>
                        <Frame Background="{StaticResource LinearGradient01}" />
                        <Label Text="(0, 0) - (1, 1)" />
                    </StackLayout>
                    <StackLayout>
                        <Frame Background="{StaticResource LinearGradient02}" />
                        <Label Text="(0.5, 0) - (0.5, 1)" />
                    </StackLayout>
                    <StackLayout>
                        <Frame Background="{StaticResource LinearGradient03}" />
                        <Label Text="(1, 0) - (0, 1)" />
                    </StackLayout>
                    <StackLayout>
                        <Frame Background="{StaticResource LinearGradient04}" />
                        <Label Text="(1, 0.5) - (0, 0.5)" />
                    </StackLayout>
                    <StackLayout>
                        <Frame Background="{StaticResource LinearGradient05}" />
                        <Label Text="(0.5, 1) - (0.5, 0)" />
                    </StackLayout>
                    <StackLayout>
                        <Frame Background="{StaticResource LinearGradient06}" />
                        <Label Text="(0, 0) - (1, 1)" />
                    </StackLayout>
                    <StackLayout>
                        <Frame Background="{StaticResource LinearGradient07}" />
                        <Label Text="(0, 1) - (1, 0)" />
                    </StackLayout>
                    <StackLayout>
                        <Frame Background="{StaticResource LinearGradient08}" />
                        <Label Text="(0, 0.5) - (1, 0.5)" />
                    </StackLayout>
                </FlexLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>