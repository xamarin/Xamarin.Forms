<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Xamarin.Forms.Controls.GalleryPages.GradientGalleries.GradientColorPicker">
  <Grid
      x:Name="ColorPicker">
        <Grid
            Opacity="0.3"
            BackgroundColor="Black" />
        <Frame
            CornerRadius="12"
            HasShadow="False"
            Margin="36, 24"
            Padding="12"
            BackgroundColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <StackLayout
                Spacing="12">
                <ScrollView>
                    <FlexLayout
                        x:Name="ColorsLayout"
                        Direction="Row"
                        JustifyContent="Center"
                        Wrap="Wrap">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    HeightRequest="48"
                                    WidthRequest="48">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Tapped="OnColorSourceTapped"/>
                                    </Grid.GestureRecognizers>
                                    <BoxView
                                        Margin="4"
                                        CornerRadius="12"
                                        HeightRequest="48"
                                        WidthRequest="48"
                                        Color="{Binding Color}" />
                                    <BoxView
                                        IsVisible="{Binding IsSelected}"
                                        CornerRadius="6"
                                        HeightRequest="12"
                                        WidthRequest="12"
                                        Color="White"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                </Grid>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>
                <StackLayout
                    HorizontalOptions="End"
                    Orientation="Horizontal">
                    <Button
                        BackgroundColor="Transparent"
                        Clicked="OnCancelClick"
                        FontAttributes="Bold"
                        Text="CANCEL"
                        TextColor="Purple" />
                    <Button
                        BackgroundColor="Transparent"
                        Clicked="OnOkClick"
                        FontAttributes="Bold"
                        Text="OK"
                        TextColor="Purple" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </Grid>
</ContentView>